{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ES6",
        "target": "ES6",
        "baseUrl": ".",
        "jsx": "react",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "app/.tmp/**"
    ]
}
